<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_twobtn"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dialog_bg_transparent"
    android:gravity="center" >

    <TextView
        android:id="@+id/mydiary_more_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/dialog_leftright_margin"
        android:layout_marginRight="@dimen/dialog_leftright_margin"

        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:textSize="@dimen/dialog_text_size"
        android:textStyle="bold"
        android:textColor="#000000" />

  <LinearLayout
      android:id="@+id/lout_1"
      android:layout_width="match_parent"
      android:layout_height="1px"
      android:layout_below="@+id/mydiary_more_share"
      android:layout_marginLeft="@dimen/dialog_leftright_margin"
      android:layout_marginRight="@dimen/dialog_leftright_margin"
      android:background="#aaaaaa"
      android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/mydiary_more_change"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lout_1"
        android:layout_marginLeft="@dimen/dialog_leftright_margin"
        android:layout_marginRight="@dimen/dialog_leftright_margin"

        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        android:textColor="#000000"
        android:textSize="@dimen/dialog_text_size"
        android:textStyle="bold" />

</RelativeLayout>
