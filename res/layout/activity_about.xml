<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
        <Button
        android:id="@+id/buttonUserDefineGong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/gray_btn"
        android:gravity="center_horizontal"
        android:text="@string/userdefine_gong"
        android:textSize="20dp" />
        
        <Button
        android:id="@+id/buttonUserDefineGuo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUserDefineGong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/gray_btn"
        android:gravity="center_horizontal"
        android:text="@string/userdefine_guo"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUserDefineGuo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:background="@drawable/gray_btn"
        android:gravity="center_horizontal"
        android:text="@string/feedback"
        android:textSize="20dp" /> 

   	<TextView
       android:layout_below="@+id/button1"
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/about_author"
        android:textSize="20dp" /> 

    
       <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/about_version"
        android:textSize="20dp" /> 

    
      <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:text="@string/about"
        android:textSize="20dp" /> 


    


</RelativeLayout>